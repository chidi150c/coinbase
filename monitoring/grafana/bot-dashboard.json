{
  "overwrite": true,
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "Coinbase Bot Monitor",
    "tags": ["coinbase", "bot", "crypto"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 7,
    "panels": [
      { "type": "timeseries", "title": "Equity (USD)", "targets": [{ "expr": "bot_equity_usd", "legendFormat": "Equity", "refId": "A" }], "id": 1, "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 } },
      { "type": "timeseries", "title": "Decisions (buy/sell/flat)", "targets": [
          { "expr": "increase(bot_decisions_total{signal=\"buy\"}[5m])", "legendFormat": "Buy signals (5m)", "refId": "A" },
          { "expr": "increase(bot_decisions_total{signal=\"sell\"}[5m])", "legendFormat": "Sell signals (5m)", "refId": "B" },
          { "expr": "increase(bot_decisions_total{signal=\"flat\"}[5m])", "legendFormat": "Flat signals (5m)", "refId": "C" }
        ], "id": 6, "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 } },
      { "type": "timeseries", "title": "Orders Placed (BUY vs SELL)", "targets": [
          { "expr": "increase(bot_orders_total{mode=\"live\",side=\"BUY\"}[1h])", "legendFormat": "BUY (1h)", "refId": "A" },
          { "expr": "increase(bot_orders_total{mode=\"live\",side=\"SELL\"}[1h])", "legendFormat": "SELL (1h)", "refId": "B" }
        ], "id": 2, "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 } },

      {
        "type": "stat",
        "title": "Circuit Breaker Status",
        "targets": [
          {
            "expr": "(bot_equity_usd - (bot_equity_usd offset 1d)) < -((bot_equity_usd offset 1d) * 0.01)",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
          "orientation": "auto",
          "textMode": "value",
          "graphMode": "none",
          "colorMode": "value",
          "valueMappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "OK", "color": "green" },
                "1": { "text": "ACTIVE", "color": "red" }
              }
            }
          ]
        },
        "id": 3,
        "gridPos": { "h": 4, "w": 12, "x": 0, "y": 24 }
      },

      {
        "type": "stat",
        "title": "Total Trades",
        "targets": [{ "expr": "sum(bot_orders_total{mode=\"live\"})", "refId": "A" }],
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
          "colorMode": "value",
          "graphMode": "none",
          "textMode": "value"
        },
        "id": 4,
        "gridPos": { "h": 4, "w": 12, "x": 12, "y": 24 }
      },
      { "type": "timeseries", "title": "Daily P/L (USD)", "targets": [
          { "expr": "bot_equity_usd - (bot_equity_usd offset 1d)", "legendFormat": "Î” P/L (24h)", "refId": "A" }
        ], "id": 5, "gridPos": { "h": 8, "w": 24, "x": 0, "y": 28 } },
      { "type": "stat", "title": "Model Mode", "targets": [{ "expr": "sum(bot_model_mode{mode=\"extended\"})", "refId": "A" }],
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
          "textMode": "value", "graphMode": "none", "colorMode": "value",
          "valueMappings": [{ "type": "value", "options": { "0": { "text": "BASELINE", "color": "green" }, "1": { "text": "EXTENDED", "color": "blue" } } }],
          "orientation": "auto"
        },
        "id": 7, "gridPos": { "h": 4, "w": 8, "x": 0, "y": 36 } },

      {
        "type": "stat",
        "title": "Volatility Risk Factor",
        "targets": [ { "expr": "bot_vol_risk_factor", "refId": "A" } ],
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
          "textMode": "value",
          "graphMode": "none",
          "colorMode": "value",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red",    "value": 0 },
              { "color": "yellow", "value": 0.7 },
              { "color": "green",  "value": 0.9 }
            ]
          }
        },
        "id": 8,
        "gridPos": { "h": 4, "w": 8, "x": 8, "y": 36 }
      },

      { "type": "timeseries", "title": "Walk-Forward Refits (1h)", "targets": [
          { "expr": "increase(bot_walk_forward_fits_total[1h])", "legendFormat": "Refits/1h", "refId": "A" }
        ], "id": 9, "gridPos": { "h": 4, "w": 8, "x": 16, "y": 36 } },
      { "type": "table", "title": "Recent Decisions (15m)", "targets": [
          { "expr": "increase(bot_decisions_total[15m])", "refId": "A", "legendFormat": "{{signal}}" }
        ], "options": { "showHeader": true, "footer": { "show": false } },
        "transformations": [{ "id": "organize", "options": { "excludeByName": {}, "indexByName": {}, "renameByName": {} } }],
        "id": 10, "gridPos": { "h": 8, "w": 12, "x": 0, "y": 40 } },
      { "type": "table", "title": "Recent Orders (1h)", "targets": [
          { "expr": "sum by (mode, side) (increase(bot_orders_total[1h]))", "refId": "A", "legendFormat": "{{mode}} / {{side}}" }
        ], "options": { "showHeader": true, "footer": { "show": false } },
        "transformations": [{ "id": "organize", "options": { "excludeByName": {}, "indexByName": {}, "renameByName": {} } }],
        "id": 11, "gridPos": { "h": 8, "w": 12, "x": 12, "y": 40 } }
    ]
  }
}
